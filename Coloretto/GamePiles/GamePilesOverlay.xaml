<UserControl x:Class="Coloretto.GamePilesOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Template>
        <ControlTemplate>
            <Grid Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Game Area" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontFamily="Verdana" FontSize="36" FontWeight="Bold" Foreground="#77000000" Margin="3"/>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
