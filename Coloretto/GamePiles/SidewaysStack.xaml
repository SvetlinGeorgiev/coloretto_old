<Panel x:Class="Coloretto.SidewaysStack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Coloretto="clr-namespace:Coloretto" Margin="0 5 0 5">
    <Panel.Children>
        <Coloretto:PilePlaceHolder x:Name="PlaceHolder" PileNumber="{Binding Path=PileNumber, RelativeSource={RelativeSource AncestorType={x:Type Panel}}}" />
    </Panel.Children>
</Panel>