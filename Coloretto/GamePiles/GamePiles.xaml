<UserControl x:Class="Coloretto.GamePiles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Coloretto="clr-namespace:Coloretto">
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Coloretto:PlayerHandCard}">
                <Setter Property="Margin" Value="3" />
            </Style>
        </Grid.Resources>
        <Coloretto:SidewaysStacks NumberOfStacks="4" />
        <Coloretto:GamePilesOverlay />
    </Grid>
</UserControl>
